AT_SETUP([evalenv])
AT_KEYWORDS([evalenv])

m4_pushdef([RUSH_ENVIRON],[-i HOME=$PWD USER=$MY_USER FOO=foo])
AT_RUSH_TEST([
rush 2.0
rule
    evalenv \${FOO:=test}
    evalenv \${BAR:=bar}
    evalenv \$HOME
],
[environ],
[command],
[0],
[{
    "environ":[[
        "BAR=bar",
        "FOO=foo",
        "HOME=$TESTDIR",
        "USER=$MY_USER"
    ]]
}
],
[])
m4_popdef([RUSH_ENVIRON])

AT_CLEANUP
