AT_SETUP([setvar])
AT_KEYWORDS([setvar])
AT_RUSH_TEST([
rush 2.0
rule first
  set count = 1
  set FOO =  bar
  fall-through

rule last
  set command = "\$FOO \$count"
],
[cmdline,vars],
[ls],
[0],
[{
    "cmdline":"bar 1",
    "vars":{
        "FOO":"bar",
        "count":"1"
    }
}
],
[])

AT_RUSH_TEST([
rush 2.0
rule first
  set home = "$PWD"
],
[cmdline,vars],
[ls],
[1],
[],
[rush: Error: test.conf:4.7-10: attempt to modify a read-only variable
rush: Error: errors in configuration file
])


AT_CLEANUP
