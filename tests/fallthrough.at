AT_SETUP([fall-through])
AT_KEYWORDS([fallthrough fall-through])

AT_RUSH_TEST([
rule
    env - USER=$MY_USER STATUS='Fall-through working'
    fall-through
    
rule
    set[0] newcommand
],
[cmdline,environ],
[command],
[0],
[{
    "cmdline":"newcommand",
    "environ":[[
        "STATUS=Fall-through working",
        "USER=MY_USER"
    ]]
}
],
[])

AT_RUSH_TEST([
rule
    chdir /tmp
    fall-through
    
rule
    set[0] newcommand
    interactive
],
[cmdline,interactive,home_dir],
[interactive],
[0],
[{
    "cmdline":"newcommand",
    "interactive":1,
    "home_dir":null    
}
],
[])

AT_CLEANUP




