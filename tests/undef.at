AT_SETUP([expanding undefined variables])
AT_KEYWORDS([undef])

m4_pushdef([RUSH_ENVIRON],[-i])
AT_RUSH_TEST([
rush 2.0
rule first
  set command = \$COMMAND
],
[cmdline],
[ls],
[1],
[],
[rush: Error: undefined variable: COMMAND
])

AT_RUSH_TEST([
rush 2.0
rule first
  set command = \${COMMAND:-\$command}
],
[cmdline],
[ls],
[0],
[{
    "cmdline":"ls"
}
],
[])

AT_RUSH_TEST([
rush 2.0
global
  expand-undefined true

rule first
  set command = \$COMMAND
],
[cmdline],
[ls],
[0],
[{
    "cmdline":""
}
],
[])
m4_popdef([RUSH_ENVIRON])

AT_CLEANUP
