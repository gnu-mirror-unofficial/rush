AT_SETUP([basic include functionality])
AT_KEYWORDS([inc00 inc include])

AT_CHECK([
AT_DATA([test.cf],
[rush 2.0
rule
  match $0 == "ls"
  include "i1.cf"

rule
  match $0 == "dir"
  include "i2.cf"
])
AT_DATA([i1.cf],
[set [[0]] = "/bin/ls"
])
AT_DATA([i2.cf],
[set [[0]] = "/bin/dir"
])
rush -C none -D cmdline -t -c "ls" test.cf
rush -C none -D cmdline -t -c "dir" test.cf
],
[0],
[{
    "cmdline":"/bin/ls"
}
{
    "cmdline":"/bin/dir"
}
])
AT_CLEANUP