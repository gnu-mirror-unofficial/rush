AT_SETUP([Back-reference expansion])
AT_KEYWORDS([backref])

AT_RUSH_TEST([
rush 2.0
rule chdir
  match \$command ~ "^cd \"(.+)\" && (runcom .*)$"
  chdir %1
  set command = "%{2}"
  fall-through

rule runcom
  match \$0 == runcom
  set [0] = "./bin/runcom"
],
[cmdline,home_dir],
[cd "$PWD" && runcom test],
[0],
[{
    "cmdline":"./bin/runcom test",
    "home_dir":"$TESTDIR"
}
],
[])

AT_CLEANUP

