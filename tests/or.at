AT_SETUP([or])
AT_KEYWORDS([match or])

AT_RUSH_TEST([
rush 2.0
rule
  match \$0 == "/bin/ls" || \$0 == "/bin/stat"
],
[cmdline,argv,prog],

[/bin/ls /usr/lib],
[0],
[{
    "cmdline":"/bin/ls /usr/lib",
    "argv":[[
        "/bin/ls",
        "/usr/lib"
    ]],
    "prog":null
}
],
[],

[/bin/stat /usr/lib],
[0],
[{
    "cmdline":"/bin/stat /usr/lib",
    "argv":[[
        "/bin/stat",
        "/usr/lib"
    ]],
    "prog":null
}
],
[],

[/bin/find /usr/lib],
[1],
[],
[rush: Error: no matching rule for "/bin/find /usr/lib", user $MY_USER
])

AT_CLEANUP

