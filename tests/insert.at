AT_SETUP([insert])
AT_KEYWORDS([insert])

AT_RUSH_TEST([
rush 2.0
rule
  match \$command ~ "^svnserve -t"
  insert [1] = "-r"
  insert [2] = "/svnroot"
],
[cmdline,argv],
[svnserve -t -v],
[0],
[{
    "cmdline":"svnserve -r /svnroot -t -v",
    "argv":[[
        "svnserve",
        "-r",
        "/svnroot",
        "-t",
        "-v"
    ]]
}
],
[])

AT_RUSH_TEST([
rush 2.0
rule
  match \$command ~ "^svnserve -t"
  insert [1] = "/svnroot"
  insert [1] = "-r"
],
[cmdline,argv],
[svnserve -t -v],
[0],
[{
    "cmdline":"svnserve -r /svnroot -t -v",
    "argv":[[
        "svnserve",
        "-r",
        "/svnroot",
        "-t",
        "-v"
    ]]
}
],
[])

AT_CLEANUP



