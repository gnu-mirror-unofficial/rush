AT_SETUP([unsetvar])
AT_KEYWORDS([unsetvar])
AT_RUSH_TEST([
rule first
  setvar[home] $PWD
  setvar[count] 1
  setvar[FOO] bar
  fall-through

rule intermediate
  unsetvar[count]
  fall-through
  
rule last
  command .*
  set %0 \$FOO \${count:-0}
],
[cmdline,vars],
[ls],
[0],
[{
    "cmdline":"ls bar 0",
    "vars":{
        "FOO":"bar",
        "home":"$TESTDIR"
    }
}
],
[rush: Notice: parsing legacy configuration file test.conf
])
AT_CLEANUP
