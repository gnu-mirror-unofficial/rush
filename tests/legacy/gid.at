AT_SETUP([gid])
AT_KEYWORDS([gid])

AT_RUSH_TEST([
rule
  gid $MY_GROUP
],
[cmdline,argv,prog],
[ls /],
[0],
[{
    "cmdline":"ls /",
    "argv":[[
        "ls",
        "/"
    ]],
    "prog":null
}
],
[rush: Notice: parsing legacy configuration file test.conf
])

AT_RUSH_TEST([
rule
  gid != $MY_GROUP
],
[cmdline,argv,prog],
[ls /],
[1],
[],
[rush: Notice: parsing legacy configuration file test.conf
rush: Error: no matching rule for "ls /", user $MY_USER
])

AT_CLEANUP

