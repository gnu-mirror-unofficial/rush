AT_SETUP([Back-reference expansion])
AT_KEYWORDS([backref])

AT_RUSH_TEST([
rule chdir
  command ^cd "(.+)" && (runcom .*)$
  chdir %1
  set %2
  fall-through

rule runcom
  command ^runcom
  set[0] ./bin/runcom
],
[cmdline,home_dir],
[cd "$PWD" && runcom test],
[0],
[{
    "cmdline":"./bin/runcom test",
    "home_dir":"$TESTDIR"
}
],
[rush: Notice: parsing legacy configuration file test.conf
])

AT_CLEANUP

